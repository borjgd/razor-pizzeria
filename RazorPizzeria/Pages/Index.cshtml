@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="welcome-banner">
    <div class="container">
        <div class="welcome-banner__content">
            <h1 class="welcome-banner__title">Welcome to Razor Pizzeria</h1>
            <a class="welcome-banner__btn btn btn-dark" href="#">Order now</a>
        </div>
    </div>
</div>

