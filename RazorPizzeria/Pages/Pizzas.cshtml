@page
@model RazorPizzeria.Pages.PizzasModel
@{
    ViewData["Title"] = "Pizzas";
}
<div class="banner">
    <img src="https://images.unsplash.com/photo-1513104890138-7c749659a591?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80" alt="" />
</div>
<div class="pizzas item-container">
    @foreach(var pizza in Model.Pizzas)
    {
        <div class="card">
            <div class="card__food">@pizza.Food
                <i class="fa-solid fa-circle-plus add-to-cart" title="Order"></i>
            </div>
            <div class="card__image"></div>
            <div class="card__details">@pizza.Description</div>
        </div>
    }
</div>